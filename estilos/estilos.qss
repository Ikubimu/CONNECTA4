//ranking table
rankingTable{
    /* Estilo general del widget */
    QWidget {
        background-color: #f5f5f5;
        font-family: Arial, sans-serif;
        font-size: 14px;
    }

    /* Estilo para el cuadro de búsqueda (QLineEdit) */
    QLineEdit {
        border: 2px solid #4CAF50;
        border-radius: 5px;
        padding: 5px;
        font-size: 14px;
        background-color: #ffffff;
        color: #333333;
        margin: 5px;
    }

    QLineEdit:focus {
        border: 2px solid #388E3C;
        background-color: #e8f5e9;
    }

    /* Estilo para la tabla (QTableView) */
    QTableView {
        border: 2px solid #4CAF50;
        border-radius: 10px;
        background-color: #ffffff;
        gridline-color: #dddddd;
        font-size: 14px;
        color: #333333;
        margin: 5px;
    }

    /* Encabezados de la tabla */
    QHeaderView::section {
        background-color: #4CAF50;
        color: white;
        padding: 8px;
        font-weight: bold;
        border: none;
        text-align: center;
    }

    /* Estilo para las filas de la tabla */
    QTableView::item {
        padding: 8px;
        border: none;
    }

    QTableView::item:selected {
        background-color: #D3E4CD; /* Color de fondo para filas seleccionadas */
        color: black;
    }

    /* Filas alternadas */
    QTableView {
        alternate-background-color: #f2f2f2;
    }

    /* Scrollbars */
    QScrollBar:vertical {
        border: none;
        background: #f2f2f2;
        width: 10px;
        margin: 0px 0px 0px 0px;
    }
    QScrollBar::handle:vertical {
        background: #4CAF50;
        border-radius: 4px;
    }
    QScrollBar::add-line:vertical,
    QScrollBar::sub-line:vertical {
        height: 0;
        border: none;
    }
}

//REGISTER
RegisterPage{
    /* Hoja de estilo para RegisterPage */

    /* QLineEdit - Estilo para los campos de entrada */
    QLineEdit {
        border: 2px solid #ccc;
        border-radius: 5px;
        padding: 5px;
        font-size: 14px;
        color: #333;
        background-color: #f9f9f9;
    }

    QLineEdit:focus {
        border-color: #007bff;
        background-color: #fff;
    }

    /* QDateEdit - Campo de fecha */
    QDateEdit {
        border: 2px solid #ccc;
        border-radius: 5px;
        padding: 5px;
        font-size: 14px;
        color: #333;
        background-color: #f9f9f9;
    }

    QDateEdit::drop-down {
        border: none;
    }

    /* QCalendarWidget - Estilo del calendario */
    QCalendarWidget QWidget {
        font-size: 14px;
    }

    QCalendarWidget QAbstractItemView:enabled {
        font-size: 14px;
        padding: 10px;
    }

    QCalendarWidget QToolButton {
        font-size: 16px;
        height: 30px;
        width: 80px;
    }

    QCalendarWidget QToolButton#qt_calendar_yearbutton {
        min-width: 100px;
    }

    QCalendarWidget QSpinBox {
        font-size: 16px;
        min-width: 100px;
        padding: 5px;
    }

    QCalendarWidget QMenu {
        font-size: 18px;
        padding: 10px;
    }

    /* QComboBox - Estilo para el selector de avatar */
    QComboBox {
        border: 2px solid #ccc;
        border-radius: 5px;
        padding: 5px;
        font-size: 14px;
        background-color: #f9f9f9;
    }

    QComboBox::drop-down {
        border: none;
    }

    QComboBox QAbstractItemView {
        border: 1px solid #ccc;
        background-color: #fff;
        selection-background-color: #007bff;
        selection-color: #fff;
    }

    /* QPushButton - Estilo para los botones */
    QPushButton {
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 15px;
        font-size: 14px;
    }

    QPushButton:hover {
        background-color: #0056b3;
    }

    QPushButton:pressed {
        background-color: #003d80;
    }

    /* QLabel - Estilo para las etiquetas */
    QLabel {
        font-size: 14px;
        color: #333;
    }

    /* Estilo para las etiquetas de error */
    QLabel[error="true"] {
        color: red;
        font-size: 12px;
    }

    /* Campos de entrada con errores */
    QLineEdit[error="true"], QDateEdit[error="true"] {
        border: 2px solid red;
        background-color: #ffe6e6;
    }
}
