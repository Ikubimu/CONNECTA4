//Forgot_Password
ForgotPasswordPage{
    /* Estilo para el QDialog */
    QDialog {
        background-color: #f4f4f4;
        border: 2px solid #4CAF50;
        border-radius: 10px;
        padding: 10px;
    }

    /* Estilo para los QLineEdit (campos de texto) */
    QLineEdit {
        border: 2px solid #ccc;
        border-radius: 5px;
        padding: 5px;
        font-size: 14px;
        font-family: Arial, sans-serif;
        background-color: #ffffff;
        color: #333333;
    }

    QLineEdit:focus {
        border: 2px solid #4CAF50;
        background-color: #e8f5e9;
    }

    /* Estilo para QLabel */
    QLabel {
        font-size: 14px;
        font-weight: bold;
        color: #4CAF50;
        font-family: Arial, sans-serif;
    }

    /* Estilo para QPushButton */
    QPushButton {
        background-color: #4CAF50;
        color: white;
        border: 2px solid #388E3C;
        border-radius: 5px;
        padding: 8px 16px;
        font-size: 14px;
        font-weight: bold;
        font-family: Arial, sans-serif;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    QPushButton:hover {
        background-color: #45a049;
        transform: scale(1.05);
    }

    QPushButton:pressed {
        background-color: #388E3C;
        transform: scale(0.95);
    }

    /* Desactivar botones (si se usa) */
    QPushButton:disabled {
        background-color: #e0e0e0;
        color: #9e9e9e;
        border: 2px solid #bdbdbd;
    }

    /* Estilo para QMessageBox */
    QMessageBox {
        background-color: #f4f4f4;
        font-family: Arial, sans-serif;
        font-size: 14px;
        border-radius: 10px;
    }

    /* Estilo para los botones dentro de QMessageBox */
    QMessageBox QPushButton {
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 5px 10px;
        font-size: 13px;
    }

    QMessageBox QPushButton:hover {
        background-color: #45a049;
    }
}

