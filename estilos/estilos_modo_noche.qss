/*REGISTER*/
.RegisterPage{
    background-color: #121212; /* Fondo oscuro */
}
.RegisterPage QLineEdit {
    border: 2px solid #555; /* Borde gris oscuro */
    border-radius: 5px;
    padding: 5px;
    font-size: 14px;
    font-weight: bold;
    color: #ddd; /* Texto gris claro */
    background-color: #1e1e1e; /* Fondo gris muy oscuro */
}

.RegisterPage QLineEdit:focus {
    border-color: #1e90ff; /* Azul claro */
    background-color: #333; /* Fondo más claro */
}

/* QDateEdit - Campo de fecha */
.RegisterPage QDateEdit {
    border: 2px solid #555;
    border-radius: 5px;
    padding: 5px;
    font-size: 14px;
    color: #ddd;
    background-color: #1e1e1e;
}

.RegisterPage QDateEdit::drop-down {
    border: none;
}

/* QCalendarWidget - Estilo del calendario */
.RegisterPage QCalendarWidget QWidget {
    font-size: 14px;
}

.RegisterPage QCalendarWidget QAbstractItemView:enabled {
    font-size: 14px;
    padding: 10px;
}

.RegisterPage QCalendarWidget QToolButton {
    font-size: 16px;
    height: 30px;
    width: 80px;
}

.RegisterPage QCalendarWidget QToolButton#qt_calendar_yearbutton {
    min-width: 100px;
}

.RegisterPage QCalendarWidget QSpinBox {
    font-size: 16px;
    min-width: 100px;
    padding: 5px;
}

.RegisterPage QCalendarWidget QMenu {
    font-size: 18px;
    padding: 10px;
}

/* QPushButton - Estilo para los botones */
.RegisterPage QPushButton {
    background-color: #1e90ff; /* Azul vivo */
    color: #fff;
    border: none;
    border-radius: 5px;
    padding: 10px 15px;
    font-size: 16px;
}

.RegisterPage QPushButton:hover {
    background-color: #0066cc; /* Azul oscuro */
}

.RegisterPage QPushButton:pressed {
    background-color: #004c99; /* Azul aún más oscuro */
}

/* QLabel - Estilo para las etiquetas */
.RegisterPage QLabel {
    font-size: 14px;
    color: #ddd; /* Texto gris claro */
}

/* Estilo para las etiquetas de error */
.RegisterPage QLabel[error="true"] {
    color: #ff5555; /* Rojo vivo */
    font-size: 12px;
}

/* Campos de entrada con errores */
.RegisterPage QLineEdit[error="true"], QDateEdit[error="true"] {
    border: 2px solid #ff5555;
    background-color: #4c1a1a; /* Fondo rojo oscuro */
}

