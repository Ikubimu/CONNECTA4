MainWindow {
    background-color: black; /*#e3e3e3;*/ /* Fondo gris claro */
}
MainWindow QPushButton {
    background-color: #007bff; /* Azul estándar */
    color: white;
    border: 2px solid #007bff;
    border-radius: 5px;
    padding: 8px 16px;
    font-size: 14px;
    font-weight: bold;
    font-family: Arial, sans-serif;
    transition: background-color 0.3s ease, transform 0.2s ease;
}
MainWindow QPushButton:hover {
    background-color: #0056b3; /* Azul más oscuro */
    transform: scale(1.05);
}
MainWindow QPushButton:pressed {
    background-color: #003d80; /* Azul aún más oscuro */
    transform: scale(0.95);
}

